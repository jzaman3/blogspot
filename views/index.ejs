<div class="author">
    <h1 class="author_heading">Personal Page.</h1>
    <p class="author_body">One liner</p>
</div>

<img src="/img/moto.jpg" alt="there's a motorcycle" class="moto-image" width="981" height="528">


<section class="articles">
    <h2 class="articles_heading">Latest Post</h2>
    <ul class="article-ul">
        <% data.forEach(post=>{ %>

        <li>
            <a href="/post/<%=post._id %>">
                <span><%= post.title %></span>
                <span class="article-list_date"><%= post.createdAt.toDateString() %></span>
            </a>
        </li>
        <% }) %>
    </ul>

    <% if (nextPage!==null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination"> &lt; View older posts</a>
    <% } %>
    
</section>
